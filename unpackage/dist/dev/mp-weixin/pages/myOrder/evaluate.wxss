page {
  background: #f3f3f3;
}
.goods {
  width: 690rpx;
  padding: 30rpx 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  background: #FFFFFF;
}
.goods .goods-img {
  width: 200rpx;
  height: 200rpx;
}
.goods .goods-img image {
  width: 200rpx;
  height: 200rpx;
}
.goods .goods-info {
  width: 470rpx;
  margin-left: 20rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.goods .goods-info > view:first-child {
  width: 470rpx;
  font-size: 14px;
  color: #4A4A4A;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-weight: bold;
}
.goods .goods-info > view:nth-child(2) {
  font-size: 14px;
  margin-top: 8rpx;
  color: #222222;
  width: 470rpx;
}
.goods .goods-info .realPay {
  width: 470rpx;
  margin-top: 12rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 14px;
  color: #A2A2A2;
}
.goods .goods-info .realPay > text:last-child {
  font-size: 17px;
  color: #C9281C;
}
.goods .goods-info .totalPay {
  width: 470rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 14px;
  color: #A2A2A2;
  margin-top: 12rpx;
}
.goods .goods-info .totalPay > text:nth-child(2) {
  font-size: 17px;
  color: #C9281C;
}
.goods .goods-info .totalPay > text:nth-child(3) {
  font-size: 12px;
  color: #FFA900;
}
.appeal {
  width: 100%;
  background: #FFFFFF;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.appeal > view:first-child {
  margin: 0 30rpx;
  padding-top: 30rpx;
  width: 690rpx;
  font-size: 14px;
  color: #09023E;
}
.appeal > view:first-child textarea {
  height: 390rpx;
}
.appeal > .opinion-img {
  width: 100%;
  background: #FFFFFF;
  margin-bottom: 30rpx;
}
.appeal > .opinion-img .imgList {
  width: 720rpx;
  padding-top: 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
          justify-content: flex-start;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  margin-left: 30rpx;
}
.appeal > .opinion-img .imgList .img-item {
  position: relative;
  margin-right: 20rpx;
}
.appeal > .opinion-img .imgList .img-item image {
  width: 150rpx;
  height: 150rpx;
}
.appeal > .opinion-img .imgList .img-item:last-child {
  margin-right: 0;
}
.appeal > .opinion-img .imgList .img-item .icon {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 0;
  top: 0;
  z-index: 999;
}
.appeal > .opinion-img .imgList .uploadImg image {
  width: 150rpx;
  height: 150rpx;
}

